generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Story {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  tags        String?
  theme       String?
  status      StoryStatus @default(DRAFT)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // ID de l'auteur (vient du auth-service)
  authorId    Int

  // Page de départ de l'histoire
  startPageId Int?      @unique
  startPage   Page?     @relation("StartPage", fields: [startPageId], references: [id])

  // Toutes les pages appartenant à cette histoire
  pages       Page[]
}

model Page {
  id        Int       @id @default(autoincrement())
  content   String
  isEnding  Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relation vers l'histoire
  storyId   Int
  story     Story     @relation(fields: [storyId], references: [id])

  // Choix qui PARTENT de cette page
  choicesFrom  Choice[] @relation("ChoicesFrom")

  // Choix qui ARRIVENT SUR cette page
  choicesTo    Choice[] @relation("ChoicesTo")

  // Relation inverse de startPage
  StoryStartPage Story? @relation("StartPage")
}

model Choice {
  id         Int    @id @default(autoincrement())
  text       String

  // Page d'origine
  fromPageId Int
  fromPage   Page   @relation("ChoicesFrom", fields: [fromPageId], references: [id], onDelete: Cascade)

  // Page ciblée
  toPageId   Int
  toPage     Page   @relation("ChoicesTo", fields: [toPageId], references: [id], onDelete: Cascade)
}

enum StoryStatus {
  DRAFT
  PUBLISHED
  SUSPENDED
}